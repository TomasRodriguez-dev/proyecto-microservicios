datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Factura {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    iduser    Int
    createdAt DateTime @default(now())
    items     Item[]
    total     Float
}

type Item {
    idproduct Int
    name      String
    price     Float
    quantity  Int
    subtotal  Float
}